/* pages/ui/add/add.wxss */
.inputItem {
	width: 100vw;
	height: 110rpx;
	border-bottom: solid 1rpx #e5e5e5;
	box-sizing: border-box;
	padding-left: 32rpx;
	padding-right: 32rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	background: white;
}

.inputItem:first-child {
	margin-top: 40rpx;
}

.inputItem text {
	width: 160rpx;
	height: 110rpx;
	line-height: 110rpx;
	text-align: left;
}

.inputItem input {
	width: calc(100vw - 64rpx - 160rpx);
	height: 110rpx;
}

.typeView {
	width: 100vw;
	height: auto;
	box-sizing: border-box;
	padding: 0 32rpx 0 32rpx;
	background: white;
	border-bottom: solid 1rpx #e5e5e5;
}

.typeView_title {
	width: 100%;
	height: 110rpx;
	line-height: 110rpx;
}

.typeView_gridView {
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}

.typeView_gridView_item {
	width: auto;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	padding-left: 32rpx;
	padding-right: 32rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	border-radius: 8rpx;
	border: solid 1rpx #e5e5e5;
	box-sizing: border-box;
}

.typeView_gridView .active {
	border: solid 1rpx #3BB7F7;
	background: #3BB7F7;
	color: #fff;
}