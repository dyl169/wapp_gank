/* pages/ui/main/main.wxss */
.pageView {
    width: 100vw;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
}

.navBarScroll {
    width: 100%;
    height: 100rpx;
    white-space: nowrap;
    background: #fff;
    border-bottom: solid 1rpx #e5e5e5;
    box-sizing: border-box;
}

.navBarTitle_item {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    box-sizing: border-box;
    display: inline-block;
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.navBarScroll .active {
    border-bottom: solid 6rpx #f05b48;
}

.swiper, 
.swiperItem,
.listView {
    width: 100vw;
    height: calc(100vh - 100rpx - 64px);
}

.listView_item {
	width: 100vw;
	height: auto;
	box-sizing: border-box;
	padding: 20rpx 32rpx 20rpx 32rpx;
	background: white;
	border-bottom: solid 1rpx #e5e5e5;
}

.listView_item .title {
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 0 20rpx 0;
}

.listView_item .imgView {
	width: 100%;
	height: auto;
    white-space: nowrap;
}

.listView_item .imgView .imgItem {
	width: 120rpx;
	height: 120rpx;
	display: inline-block;
	margin-right: 20rpx;
}

.listView_item .user {
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 24rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}